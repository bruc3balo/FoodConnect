<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".pages.beneficiary.fragment.BuyerPurchasesStats">


    <LinearLayout
        android:id="@+id/donorStats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/black"
            app:navigationIcon="@drawable/ic_back"
            app:titleTextColor="@color/white"
            app:title="@string/donation_stats"
            app:subtitle="@string/donations"
            app:subtitleTextColor="@android:color/darker_gray"
            android:id="@+id/toolbar"/>

        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:id="@+id/title"
                android:textSize="20sp"/>

            <com.anychart.AnyChartView
                android:layout_weight="1"
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:visibility="visible" />


        </LinearLayout>

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/donorPb"
            style="@style/SpinKitView.Large.WanderingCubes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:SpinKit_Color="@android:color/holo_red_dark" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/noDonorData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_warning" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:text="@string/no_donor_data"
            android:textColor="@color/black"
            android:textSize="30sp" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>