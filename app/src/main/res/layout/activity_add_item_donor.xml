<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.donor.AddItemDonor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/white"
            app:titleTextColor="@color/black"
            app:navigationIcon="@drawable/ic_back_black"
            app:title="@string/add_items"
            app:subtitleTextColor="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/previous"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_back"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:tint="@color/black" />

            <me.relex.circleindicator.CircleIndicator3
                android:layout_margin="5dp"
                android:id="@+id/indicator"
                android:minHeight="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:ci_drawable_unselected="@drawable/purple_dot_big"
                app:ci_drawable="@drawable/black_dot"
                android:layout_gravity="center" />

            <ImageButton
                android:id="@+id/next"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_back"
                android:rotation="180"
                android:scaleType="fitCenter"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:tint="@color/black" />

        </LinearLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:layout_weight="1"
            android:id="@+id/addItemPages"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/addDonation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_bg_button"
            android:layout_gravity="center"
            android:text="@string/add_donation"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </LinearLayout>


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/pb"
        android:indeterminateTint="@color/black"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>