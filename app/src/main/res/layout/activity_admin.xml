<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.admin.AdminActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@color/white"
                app:subtitleTextColor="@android:color/darker_gray"
                app:title="@string/transporter"
                app:titleTextColor="@color/black" >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:layout_height="match_parent"
                        android:src="@mipmap/food_connect_logo"/>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_marginStart="20sp"
                            android:layout_height="0dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:text="Welcome admin"/>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/subText"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_marginStart="20sp"
                            android:layout_height="0dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp"
                            android:text="@string/to_be_filled"/>

                    </LinearLayout>


                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/adminFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY" />

        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/adminNavigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/admin_drawer"
        app:headerLayout="@layout/seller_header"
        android:layout_gravity="start" />

</androidx.drawerlayout.widget.DrawerLayout>