<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.transporter.jobProgress.ReviewFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/donorTitle"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/donor"
                    android:textStyle="bold"
                    android:layout_gravity="top"/>


                <TextView
                    android:id="@+id/donorReview"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/donor"
                    android:textStyle="normal"
                    android:layout_gravity="top"/>

                <LinearLayout
                    android:id="@+id/donorLayout"
                    android:layout_marginTop="20sp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/donorField"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:background="@drawable/edit_text_field_white"
                        android:gravity="center_vertical"
                        android:hint="@string/write_your_review_here"
                        android:minHeight="48dp"
                        android:padding="10dp" />

                    <ImageButton
                        android:visibility="gone"
                        android:id="@+id/sendDonor"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center|end"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/ic_circle_button_red"
                        android:backgroundTint="@color/black"
                        android:src="@android:drawable/ic_menu_send"
                        tools:ignore="SpeakableTextPresentCheck" />


                </LinearLayout>

                <RatingBar
                    android:id="@+id/donorRating"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:isIndicator="true"
                    style="@style/Widget.AppCompat.RatingBar.Indicator" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/transporterTitle"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/transporter"
                    android:textStyle="bold"
                    android:layout_gravity="top"/>

                <TextView
                    android:id="@+id/transporterReview"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/transporter"
                    android:textStyle="normal"
                    android:layout_gravity="top"/>

                <LinearLayout
                    android:id="@+id/transLayout"
                    android:layout_marginTop="20sp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/transporterField"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:background="@drawable/edit_text_field_white"
                        android:gravity="center_vertical"
                        android:hint="@string/write_your_review_here"
                        android:minHeight="48dp"
                        android:padding="10dp" />

                    <ImageButton
                        android:visibility="gone"
                        android:id="@+id/sendTransporter"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center|end"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/ic_circle_button_red"
                        android:backgroundTint="@color/black"
                        android:src="@android:drawable/ic_menu_send"
                        tools:ignore="SpeakableTextPresentCheck" />


                </LinearLayout>

                <RatingBar
                    android:id="@+id/transRating"
                    android:isIndicator="true"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    style="@style/Widget.AppCompat.RatingBar.Indicator" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/beneficiaryTitle"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/beneficiary"
                    android:textStyle="bold"
                    android:layout_gravity="top"/>

                <TextView
                    android:id="@+id/beneficiaryReview"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/beneficiary"
                    android:textStyle="normal"
                    android:layout_gravity="top"/>

                <LinearLayout
                    android:id="@+id/beneLayout"
                    android:layout_marginTop="20sp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:enabled="false"
                        android:id="@+id/beneficiaryField"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_field_white"
                        android:gravity="center_vertical"
                        android:hint="@string/write_your_review_here"
                        android:minHeight="48dp"
                        android:padding="10dp" />

                    <ImageButton
                        android:visibility="gone"
                        android:id="@+id/sendBene"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center|end"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/ic_circle_button_red"
                        android:backgroundTint="@color/black"
                        android:src="@android:drawable/ic_menu_send"
                        tools:ignore="SpeakableTextPresentCheck" />


                </LinearLayout>

                <RatingBar
                    android:id="@+id/beneRating"
                    android:isIndicator="true"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    style="@style/Widget.AppCompat.RatingBar.Indicator" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>